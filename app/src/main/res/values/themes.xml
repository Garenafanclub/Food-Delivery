<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Epicure.Starting" parent="Theme.SplashScreen">
        <!--        <item name="windowSplashScreenBackground">@color/black</item>-->
        <item name="android:windowBackground">@color/red</item>
        <item name="postSplashScreenTheme">@style/Theme.Epicure</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>
    </style>
    <style name="Theme.Epicure" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue_grey</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="totalStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>